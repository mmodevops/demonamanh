<body>
  <div class="wrapper">
    <div class="header">
      <img src="images/backgroundheader.jpg" width="100%" height="500">
    </div>
    <div class="menu">
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/insert">Insert</a>
        </li>
      </ul>
    </div>
    <div class="content">
      <div class="left">
        <h3 style="text-align: center; color: black; background: #F2EAEA;"> Nguyen Hoang Dai Duong
          <br> GCH18815 </h3>
        <div>
          <img src="images/picture.jpg" width="100%" height="300">
        </div>
      </div>
      <div class="right">
        <h2 style="text-align: center;"> Form Insert</h2>
        <form action="doInsert" method="POST">
          <div class="form-group">
            <label for="name">Toy name:</label>
            <input type="text" class="form-control" id="" name="txtName" placeholder="Enter Name" required>
             <label type="lblNameError" style="color:red;" >{{model.txtError}}</label>
          </div>
          <div class="form-group">
            <label for="type">Type: </label>
            <input type="text" class="form-control" id="" name="txtType" placeholder="Enter Type" required>
          </div>
          <div class="form-group">
            <label for="type">Price: </label>
            <input type="text" class="form-control" id="" name="txtPrice" placeholder="Enter Price" required>
             <label type="lblNameError" style="color:red;" >{{model.nameError}}</label>
          </div>
          <button type="submit" class="btn btn-default" value="update" style="background-color: darksalmon;">Insert</button>
        </form>


      </div>
    </div>
    <div class="clear"></div>
    <div class="footer">
      <h6 style="color: #909; text-align: center; line-height: 15px;">@Copyright 2020</h6>
    </div>
